          "400": {
            "description": "Nombre y precio son requeridos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Nombre y precio son requeridos"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Acceso denegado (sin token válido)"
          },
          "500": {
            "description": "Error al crear el producto",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Error al crear el producto"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
